@model List<BoiPoka.Models.Order>
@{
    ViewData["Title"] = "Manage Orders";
}

<div>
    <h2>Manage Orders</h2>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Order Date</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>    
                @foreach (var order in Model)
                {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.User.UserName</td>
                            <td>@order.OrderDate</td>
                            <td class="bd-currency">@order.TotalAmount.ToString("C", new System.Globalization.CultureInfo("bn-BD"))</td>
                            <td>
                                <form asp-action="ManageOrders" method="post">
                                    <input type="number" name="orderStatus" value="@order.OrderStatus.ToString()" /> 
                                    <input type="hidden" name="orderId" value="@order.OrderId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Update</button>
                                </form>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap" rel="stylesheet">
    <style>
        .bd-currency {
            font-family: 'Noto Sans', sans-serif;
        }
    </style>
</div>