@model List<BoiPoka.Models.Books>

@{
	ViewData["Title"] = "View Books";
	//Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h2>View Books</h2>
<table class="table table-striped">
	<thead>
		<tr class="gap-2">
			<th>Title</th>
			<th>Description</th>
			<th>Author</th>
			<th>Price</th>
			<th>Stock Quantity</th>
			<th>Category</th>
			<th>Created</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var book in Model)
		{
			<tr class="m-1 gap-2 border-1 p-2">
				<td>@book.Title</td>
				<td>@book.Description</td>
				<td>@book.Author</td>
				<td>@book.Price</td>
				<td>@book.StockQuantity</td>
				<td>@book.Category</td>
				<td>@book.CreatedAt</td>
				<td>
					<a asp-controller="Books" asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-sm btn-primary mb-2">Edit</a>

					<form asp-action="Delete" asp-controller="Books" asp-route-id="@book.BookId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this book?');">
						<button type="submit" class="btn btn-sm btn-danger">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
